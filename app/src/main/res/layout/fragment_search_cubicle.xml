<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchCubicleFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                tools:srcCompat="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Reservar Cubículo"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Día"
                android:textColor="#000000"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinDay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/spinner_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Hora"
                android:textColor="#000000"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinHoursAvailable"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginHorizontal="32dp"
                android:background="@drawable/spinner_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:spinnerMode="dropdown"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Cantidad de horas"
                android:textColor="#000000"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinHours"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Código del segundo alumno"
                android:textColor="#000000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etSecondCode"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/input_rounded"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="u201413797"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/etSecondCode">

                <Button
                    android:id="@+id/searchCubicleBtn"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Buscar"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>